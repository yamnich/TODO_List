<div class = "formcontainer well">
  <h1>Edit list</h1>

  <form id="edit-list" name="list">
     <div class="field">
       <label>Name</label>
       <input type="text" name = "name" value = "<%= name %>" />
     </div>
     <div class="field">
       <label>Description</label>
       <textarea rows="10" cols="45" name="description"><%= description %></textarea>
     </div>
     <div class="actions">
       <input type="submit" value="Update List" />
     </div>
  </form>
  <a href="#/index">Back</a>
</div>