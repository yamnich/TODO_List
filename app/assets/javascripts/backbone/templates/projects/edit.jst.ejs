<div class = "formcontainer well">
  <h1>Edit project</h1>

  <form id="edit-project" name="project">
     <div class="field">
       <label>Name</label>
       <input type="text" name = "name" value = "<%= name %>" />
     </div>
     <div class="field">
       <label>Description</label>
       <textarea rows="10" cols="45" name="description"><%= description %></textarea>
     </div>
     <div class="actions">
       <input type="submit" value="Update Project" />
     </div>
  </form>
  <a href="#/index">Back</a>
</div>