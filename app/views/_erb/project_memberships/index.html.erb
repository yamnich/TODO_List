<div class="content">
<% if @project.members.nil? %>
<p> There is no member</p>
<% else %>
    <% @project.members.each do |member|           %>
        <tr>
          <td><%= member.name %></td>
          <td><%=  link_to  "Remove user", destroy_members_project_path(@project, member), confirm: 'Are you sure?', method: :delete %></td>
        </tr>        <br />
    <% end %>

<% end %>
<p><%=  link_to "Invite user to project", project_path(@project)+'/members/invite'  %></p>
</div>