.page.header
%h2 Sign in
=  form_for(resource_name, as: resource, url: session_path(resource_name), class: "well") do |f|
  .field
    = f.label :email
    = f.text_field :email
  .field
    = f.label :password
    = f.password_field :password
  - if devise_mapping.rememberable?
    .field
      = f.check_box :remember_me
      = f.label :remember_me
  .actions
    = f.submit "Sign in", class: "btn-info"
= render "devise/links"

