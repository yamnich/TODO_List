<!DOCTYPE html>
<html>
<head>
    <%= csrf_meta_tag %>
    <%= javascript_include_tag "application" %>
 </head>
<body>
    <div class="container">
      <%= render 'layouts/header' %>

      <section class="round">
        <% flash.each do |key, value| %>
            <div class="flash <%= key  %>"> <%= value %> </div>
        <% end %>
        <%= yield %>
      </section>
      <%= render 'layouts/footer' %>
     <%= debug(params) if Rails.env.development? %>
  </div>
</body>
</html>
