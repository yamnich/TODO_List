<h1>Adding new list</h1>
<%= form_for(@list) do |f| %>

   <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %> <br />
    <%= f.text_area :description %>
  </div>

  <div class="actions">

    <%= f.submit "New" %>
  </div>
<% end %>