<%= form_for([@user, @list,@task]) do |f| %>
   <%= render 'shared/error_messages', :object => f.object %>
   <div class="field">
    <%= f.label :name %> <br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %> <br />
    <%= f.text_field :description %>
  </div>

   <div class="field">
    <%= f.label :state %> <br />
    <%= f.text_field :state %>
  </div>


   <div class="field">
    <%= f.label :priority %> <br />
    <%= f.text_field :priority %>
  </div>

  <div class="actions">

    <%= f.submit @button_name %>
  </div>
<% end %>