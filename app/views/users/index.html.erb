


<div class="content">
    <h1>All users</h1>
    <table>
      <% @users.each do |user| %>
        <tr>
          <td >
            <%= gravatar_for user %>
            <%=  link_to user.name, user %>
          </td>
            <% if current_user.admin? %>
              <%=  link_to "Delete", user, confirm: 'Are you sure?', method: :delete,title: "Delete #{user.name}"  %>
            <% end %>
        </tr>
      <% end %>
    </table>
</div>