<table class="profile" summary="Profile information">

<h1>All users</h1>

  <% if @users.blank? %>
    <p> There is no user </p><br />
    <p>Do you want to   <%=  link_to "Add", new_user_path%> new one?</p>
  <% else %>
      <table>
    <% @users.each do |user| %>
      <tr>
        <td class title="main">
          <%= gravatar_for user %>
          <%=  link_to user.name, user %>
         </td>
      </tr>
      <tr>
      <td><%=  link_to "Show", user_lists_path(user, @list)%></td>
      <td>
         <% if current_user.admin? %>
         <%=  link_to "Delete", user, confirm: 'Are you sure?', method: :delete,title: "Delete #{user.name}"  %>
         <% end %>
       </td>
      </tr>
    <% end %>
      </table>
       <p>Do you want to   <%=  link_to "Add", new_user_path%> new one?</p>
    <% end %>


</table>